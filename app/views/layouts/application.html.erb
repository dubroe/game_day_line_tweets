<!DOCTYPE html>
<html>
  <head>
    <title>GameDayLineTweets</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-153395764-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-153395764-1');
    </script>

    <%= favicon_link_tag asset_path('favicon.ico') %>
  </head>

  <body class="bg-gray-200 ">
    <div class="flex justify-start">
      <div class="sidebar w-32 lg:w-1/4 h-screen lg:p-3 sticky top-0 bg-gray-200 overflow-y-scroll border-indigo-700 border-l-4">
        <ul>
          <li class="pt-3 lg:pt-0">
            <%= link_to root_url, class: "lg:p-2 flex items-center justify-center lg:justify-start" do %>
              <div class="lg:mr-4 h-20 w-20 lg:h-24 lg:w-24 p-1 lg:p-0">
                <%= image_tag("logo.svg", size: 100, class: "h-20 w-20 lg:h-24 lg:w-24") %>
              </div>
            <% end %>
          </li>
          <% Team.all.each do |team| %>
            <li class="pt-3 lg:pt-0">
              <%= link_to root_url(team: team.abbr), class: "lg:p-2 flex items-center justify-center lg:justify-start hover:bg-white" do %>
                <div class="lg:mr-4 h-20 w-20 lg:h-10 lg:w-10 p-1 lg:p-0">
                  <%= image_tag("logos/#{team.abbr.downcase}.svg", size: 55, class: "h-20 w-20 lg:h-10 lg:w-10") %>
                </div>
                <span class="hidden lg:block">
                  <%= team.name %>
                </span>
              <% end %>
            </li>
          <% end %>
        </ul>

      </div>
      <div class="lg:container lg:mx-auto w-full p-3 text-center bg-gray-100 flex flex-col items-center border-l border-gray-400">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
